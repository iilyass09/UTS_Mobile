<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_calcu"
                tools:context=".MainActivity">

    <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:gravity="center"
            android:fontFamily="@font/poppinssemibold"
            android:text="Bilangan 1"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25dp" />

    <EditText
            android:inputType="number"
            android:textColor="@color/white"
            android:id="@+id/bilangan1"
            android:textSize="25dp"
            android:background="@drawable/background_edt"
            android:layout_width="370dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:layout_marginTop="460dp"/>

    <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:gravity="center"
            android:text="Bilangan 2"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25dp" />

    <EditText
            android:inputType="number"
            android:textColor="@color/white"
            android:id="@+id/bilangan2"
            android:textSize="25dp"
            android:layout_width="370dp"
            android:background="@drawable/background_edt"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginLeft="20dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:layout_marginTop="580dp"/>

    <LinearLayout
            android:layout_width="370dp"
            android:layout_marginLeft="20dp"
            android:layout_height="330dp"
            android:layout_marginTop="420dp">

        <Spinner
                android:id="@+id/spin"
                android:entries="@array/kumpulanoperasihitung"
                android:layout_weight="1"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginTop="250dp"
                android:textAlignment="center"/>

        <Space
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="65dp"/>

        <Button
                android:id="@+id/calbtn"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginTop="250dp"
                android:layout_weight="1"
                android:text="CALCULATE"
                android:fontFamily="@font/poppinsbold"
                android:textSize="18dp"
                android:textStyle="bold"/>
    </LinearLayout>

    <TextView
            android:id="@+id/hasil"
            android:layout_marginTop="743dp"
            android:layout_marginLeft="6dp"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsbold"
            android:textSize="25dp"
            android:gravity="center"/>

</RelativeLayout>